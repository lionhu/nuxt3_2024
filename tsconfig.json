{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./app/.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "Node",
    "types": ["@pinia/nuxt", "@nuxtjs/tailwindcss", "@nuxt/ui"],
    "baseUrl": ".",
    "paths": {
      "~~": ["."],
      "~~/*": ["./*"],
      "@@": ["."],
      "@@/*": ["./*"],
      "~": ["."],
      "~/*": ["./*"],
      "@": ["."],
      "@/*": ["./*"],
      "assets": ["assets"],
      "types": ["types"],
      "public": ["public"],
    },
  },
}
